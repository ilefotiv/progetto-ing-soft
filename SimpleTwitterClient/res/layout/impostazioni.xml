<RelativeLayout
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/layout_background"
xmlns:android="http://schemas.android.com/apk/res/android"
>
	<LinearLayout
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="0px" 
    android:layout_height="0px"/>
	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginBottom="25pt"
	>
		<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		>
				<View
		        	android:layout_width="fill_parent"
		        	android:layout_height="5px"
		         >
		         </View>
		        <TextView
		        	android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:textColor="#000000"
		        	android:textStyle="bold"
		        	android:text="Indirizzo Ip Server"
		        	android:paddingLeft="5px"
		        >
		        </TextView>
		        <View
		        	android:layout_width="fill_parent"
		        	android:layout_height="5px"
		        >
		        </View>	
		        <EditText
		        	android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:textColor="#000000"
		        	android:hint="inserisci indirizzo"
		        	android:id="@+id/serverIpEdit"
		        	android:nextFocusUp="@+id/serverIpEdit" 
		        	android:nextFocusLeft="@+id/serverIpEdit">
		        </EditText>
		        <View
		        	android:layout_width="fill_parent"
		        	android:layout_height="5px"
		         >
		         </View>
		        <TextView
		        	android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:textColor="#000000"
		        	android:textStyle="bold"
		        	android:text="Porta Server"
		        	android:paddingLeft="5px"
		        >
		        </TextView>
		        <View
		        	android:layout_width="fill_parent"
		        	android:layout_height="5px"
		        >
		        </View>	
		        <EditText
		        	android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:textColor="#000000"
		        	android:hint="inserisci porta"
		        	android:id="@+id/serverPortaEdit">
		        </EditText>
		        <TextView
		        	android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:textColor="#000000"
		        	android:textStyle="bold"
		        	android:text="Username"
		        	android:paddingLeft="5px"
		        	android:id="@+id/usernameTextId"
		        >
		        </TextView>
		        <View
		        	android:layout_width="fill_parent"
		        	android:layout_height="5px"
		        >
		        </View>	
		        <EditText
		        	android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:textColor="#000000"
		        	android:hint="Modifica UserName"
		        	android:id="@+id/userNameEdit">
		        </EditText>
		</LinearLayout>
	</ScrollView>
	<LinearLayout
		android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:layout_alignParentBottom="true"
      >
	       	<ImageButton 
			android:id="@+id/savePrefButton"
			android:layout_weight="20"
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:src="@drawable/save"
			android:tag="save">
			</ImageButton>
			<ImageButton 
			android:id="@+id/cancelPref"
			android:layout_weight="20"
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:src="@drawable/arrow_left"
			android:tag="cancel">
			</ImageButton>
	</LinearLayout>
</RelativeLayout>